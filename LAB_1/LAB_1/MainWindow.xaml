        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LAB_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="350" MinHeight="300" MinWidth="450" FontSize="30">
    <Window.Resources>
